@Fullname navchar(100),
@enail navchar(50)
@DateOfBirth int, 
@Address nvarchar (50),
@Telephone nvarchar(50),
@Email nvarchar(50)
@securityAnswer(50)

)

as

begin

Update Logins set password = @password , 
where   email = @Emil






